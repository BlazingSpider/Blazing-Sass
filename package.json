{
  "name": "blazing-sass",
  "version": "0.1.0",
  "description": "Blazing Sass CSS framework, ready to use in Sass powered applications",
  "keywords": [
    "blazing-sass",
    "scss",
    "sass"
  ],
  "files": [
    "composer.json",
    "sass/**/*"
  ],
  "homepage": "https://github.com/BlazingSpider/Blazing-Sass.git",
  "bugs": {
    "url": "https://github.com/BlazingSpider/Blazing-Sass.git/issues"
  },
  "license": "MIT",
  "author": "Massoud Shakeri <massoud@blazingspider.com>",
  "main": "_blazing.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlazingSpider/Blazing-Sass.git"
  },
  "devDependencies": {
    "node-sass": "^7.0.1",
    "rtlcss": "^3.5.0",
    "stylelint": "^14.2.0",
    "stylelint-config-standard": "^24.0.0"
  },
  "scripts": {
    "compile:css": "node-sass sass/_blazing.scss -o ./ && stylelint '*.css' --fix || true && stylelint '*.css' --fix",
    "compile:rtl": "rtlcss style.css style-rtl.css"
  }
}
